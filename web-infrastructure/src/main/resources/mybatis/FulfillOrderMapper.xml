<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.yiming.web.gatewayimpl.database.FulfillOrderMapper">
    <sql id="ALL_COLUMNS">
        id,
        user_id,
        main_metric,
        sub_metric,
        metric_item,
        creator,
        modifier,
        gmt_create,
        gmt_modified,
        is_deleted
    </sql>

    <sql id="COMMON_SELECT">
        SELECT
        <include refid="ALL_COLUMNS"/>
        FROM metric
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.ruyuan.fulfill.infrastructure.gatewayimpl.database.dataobject.MetricDO">
        INSERT INTO metric(
            <include refid="ALL_COLUMNS"/>
        ) VALUES (
        null,
        #{userId},
        #{mainMetric},
        #{subMetric},
        #{metricItem},
        #{creator},
        #{modifier},
        now(),
        now(),
        'n'
        )
    </insert>
</mapper>